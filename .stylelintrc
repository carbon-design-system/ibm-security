{
  "extends": ["stylelint-config-carbon", "stylelint-config-recommended-scss"],
  "plugins": [
    "stylelint-no-unsupported-browser-features",
    "stylelint-plugin-carbon-tokens",
    "stylelint-scss"
  ],
  "rules": {
    "carbon/motion-token-use": [true, { "severity": "warning" }],
    "carbon/type-token-use": [
      true,
      {
        "acceptCarbonFontWeightFunction": true,
        "acceptCarbonTypeScaleFunction": true,
        "severity": "warning"
      }
    ],
    "declaration-property-value-disallowed-list": null,
    "plugin/no-unsupported-browser-features": [
      true,
      {
        "severity": "warning"
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": ["/^spacing-/"]
      }
    ],
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["export"]
      }
    ]
  }
}
